{{define "yield"}}
<div class="row">
  <div class="col-md-4">
    <h1>
      {{.Title}}
    </h1>
  </div>
  <hr>
</div>

<div class="row">
  {{range .ImagesSplitN 3}}
  <div class="col-md-4">
    {{range .}}
    <a href="{{.Path}}">
      <img src="{{.Path}}" alt="image" class="thumbnail">
    </a>
    {{end}}
  </div>
  {{end}}
</div>

<style>
  .thumbnail {
    width: 100%;
  }
</style>
{{end}}
